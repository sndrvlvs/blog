<h1>Listing posts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) unless post.test %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete unless post.test %></td>
    <td><%= link_to 'Close', 'posts/'+post.id.to_s+'/close' %></td>
    <td><%= link_to 'Open', 'posts/'+post.id.to_s+'/open' %></td>
    <td><%= link_to 'Delete Comments', 'posts/'+post.id.to_s+'/delete_comments', confirm: 'Are you sure?' %></td>
  </tr>
<% end %>
</table>

